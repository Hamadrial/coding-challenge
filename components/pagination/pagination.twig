{#
 # Template for Bootstrap pagination.
 #
 # @see https://getbootstrap.com/docs/4.0/components/pagination/
 # @version 1.0.0
 #
 # @var pagination        The pagination object from an index page or single content.
 # @var pagination_title  The ARIA descriptor for this pagination.
 #}


  <nav class="pagination-nav" aria-label="{{ pagination_title }}">
    <ul class="pagination {{ classes }} text-center">
      {% if posts.pagination.prev %}
        <li class="page-item {{ posts.pagination.prev.link|length ?: 'disabled'}}">
          <a class="page-link text-secondary-color" href="{{ posts.pagination.prev.link }}" {{ posts.pagination.prev.link|length ?: 'tabindex="-1"'}}>{% include 'assets/images/Logo/pagination-left-arrow.svg' %}</a>
        </li>
      {% endif %}
      {% for page in posts.pagination.pages %}
        <li class="page-item {{ page.current ? 'active' }}">
          <a class="page-link text-secondary-color" href="{{ page.link }}">{{ page.title }}{{ page.current ? __('<span class="sr-only">(current)</span>', 'coding-challenge-theme') }}</a>
        </li>
      {% endfor %}
      {% if posts.pagination.next %}
        <li class="page-item {{ posts.pagination.next.link|length ?: 'disabled'}}">
          <a class="page-link text-secondary-color" href="{{ posts.pagination.next.link }}" {{ posts.pagination.next.link|length ?: 'tabindex="-1"'}}>{% include 'assets/images/Logo/pagination-right-arrow.svg' %}</a>
        </li>
      {% endif %}
    </ul>
  </nav>

